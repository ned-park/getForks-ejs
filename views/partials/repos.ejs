<section class="container mx-auto flex flex-wrap p-2 space-y-1 pb-8">
  <% repos.filter(repo => repo.display).forEach( repo => { %> 
      <div class="flex flex-col justify-center w-full">
          <div class="flex flex-row h-44 md:h-36 rounded-lg bg-white shadow-lg items-between">
              <% if (repo.image) {
                let baseUrl = repo.image.slice(0,49), filename = repo.image.slice(62)  
              %>
              <!-- <a href="/<%=repo.userId.username%>/<%=repo._id%>" class="w-32 h-44 md:h-36 rounded-t-lg object-cover md:rounded-none md:rounded-l-lg" > -->
                <img class="w-32 h-auto rounded-t-lg object-cover md:rounded-none md:rounded-l-lg" src="<%=baseUrl%>/f_auto,q_90,w_256/<%=filename%>" alt="" />
              <!-- </a> -->
              <%} else {%>
              <div class="ml-2 w-44 md:w-36 h-96 md:h-auto"></div>
              <%}%>
              <div class="p-2 flex flex-col w-full">
                  <a href="/<%=repo.userId.username%>/<%=repo._id%>">
                      <h5 class="text-gray text-xl text-left font-medium hover:text-blue"><%=repo.title%></h5>
                  </a>
                  <a href="/<%=repo.userId.username%>" class="">
                    <span class="text-gray text-base mb-4 hover:text-blue">More from <%=repo.userId.username%></span>
                    </a>
                  <div class="flex justify-between">
                  <% if (repo.description.length > 0) { %>
                      <span class="text-gray-700 text-base"><%=repo.description.slice(0,128) + '...'%></span>
                  <% } else {%>
                      <div></div>
                  <% } %>
                  </div>
                  <div class="flex justify-start w-full mb-2"><span><%repo.tags.forEach(tag => {%><a href="/search?query=<%=tag%>" class="hover:text-blue cursor:pointer"><span><%=tag%></span></a> <%})%></div>
                  
                  
                  <!-- <p class="text-brBlack text-xs"><%=repo.creationDate%></p> -->
              </div>
          </div>
        </div>
  <% }) %>    
  </section>